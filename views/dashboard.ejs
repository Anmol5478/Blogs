<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            background-color: #000;
            color: white;
        }
    </style>
</head>
<body>
    <div class="min-h-screen flex flex-col items-center justify-center px-4 sm:px-6 lg:px-8">
        <div class="max-w-6xl w-full bg-gray-900/50 p-8 rounded-xl border border-gray-800 shadow-2xl">
            <h1 class="text-3xl font-bold mb-6 text-center">User Dashboard</h1>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <!-- User Info Section -->
                <div class="bg-gray-800 p-6 rounded-lg border border-gray-700 shadow-lg">
                    <h2 class="text-2xl font-semibold mb-4 text-purple-400">Welcome, <%= user.name %>!</h2>
                    <p class="text-gray-300 mb-2">Email: <%= user.email %></p>
                    <p class="text-gray-300 mb-2">Member since: <%= new Date(user.createdAt).toLocaleDateString() %></p>
                </div>

                <!-- User Actions Section -->
                <div class="bg-gray-800 p-6 rounded-lg border border-gray-700 shadow-lg">
                    <h2 class="text-2xl font-semibold mb-4 text-purple-400">Actions</h2>
                    <ul class="space-y-2">
                        <li>
                            <a href="/blog/write" class="text-purple-500 hover:underline">Write a New Blog</a>
                        </li>
                        <li>
                            <a href="/blogs" class="text-purple-500 hover:underline">View All Blogs</a>
                        </li>
                        <li>
                            <a href="/logout" class="text-purple-500 hover:underline">Logout</a>
                        </li>
                    </ul>
                </div>

                <!-- User Blogs Section -->
                <div class="bg-gray-800 p-6 rounded-lg border border-gray-700 shadow-lg">
                    <h2 class="text-2xl font-semibold mb-4 text-purple-400">Your Blogs</h2>
                    <% if (userBlogs.length > 0) { %>
                        <ul class="space-y-2">
                            <% userBlogs.forEach(blog => { %>
                                <li>
                                    <a href="/blog/<%= blog.id %>" class="text-purple-500 hover:underline"><%= blog.title %></a>
                                </li>
                            <% }) %>
                        </ul>
                    <% } else { %>
                        <p class="text-gray-300">You haven't written any blogs yet.</p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</body>
</html>