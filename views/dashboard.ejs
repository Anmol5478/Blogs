<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>User Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    body {
      background-color: #0f172a;
      color: white;
    }
  </style>
</head>
<body class="min-h-screen flex flex-col items-center justify-center px-4 py-10">

  <div class="w-full max-w-4xl flex flex-col gap-6 items-center">

    <!-- Profile Section -->
    <div class="w-full bg-gray-800 p-6 rounded-xl shadow-lg border border-gray-700 text-center">
      <!-- Display Profile Picture -->
      <img src="<%= user.Image %>" alt="Profile Picture" class="mx-auto w-24 h-24 rounded-full mb-4 border-4 border-purple-500">
      <h2 class="text-2xl font-bold text-purple-400 mb-2">Welcome, <%= user.username %>!</h2>
      <p class="text-gray-300">Email: <%= user.email %></p>
      <p class="text-gray-400">Member since: <%= new Date(user.createdAt).toLocaleDateString() %></p>
    </div>

    <!-- Actions Section -->
    <div class="w-full bg-gray-800 p-6 rounded-xl shadow-lg border border-gray-700">
      <h2 class="text-2xl font-semibold text-purple-400 mb-4">Actions</h2>
      <ul class="space-y-2">
        <li><a href="/blog/write" class="text-purple-500 hover:underline">Write a New Blog</a></li>
        <li><a href="/blogs" class="text-purple-500 hover:underline">View All Blogs</a></li>
        <li><a href="/logout" class="text-purple-500 hover:underline">Logout</a></li>
      </ul>
    </div>

    <!-- Blogs Section -->
    <div class="w-full bg-gray-800 p-6 rounded-xl shadow-lg border border-gray-700">
      <h2 class="text-2xl font-semibold text-purple-400 mb-4">Your Blogs</h2>
      <% if (userBlogs.length > 0) { %>
        <ul class="space-y-2">
          <% userBlogs.forEach(blog => { %>
            <li><a href="/blog/<%= blog.id %>" class="text-purple-500 hover:underline"><%= blog.title %></a></li>
          <% }) %>
        </ul>
      <% } else { %>
        <p class="text-gray-300">You haven't written any blogs yet.</p>
      <% } %>
    </div>

  </div>
</body>
</html>
